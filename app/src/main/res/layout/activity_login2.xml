<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="100dp"
    tools:context="com.example.pauline.easyvoting.Login2"
    android:background="@drawable/draw1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ONLY FOR ADMINS!!!!!!"
                android:layout_gravity="center"
                android:textColor="#ff0000"
                android:textSize="20dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout">

                <EditText
                    android:id="@+id/adminemailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint=" Admin Email"
                    android:textAlignment="center"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/passwordEditText"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/adminpasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint=" Admin Password"
                    android:textAlignment="center"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/passwordEditText"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#000000"
                    android:textSize="20sp" />


                <Button
                    android:id="@+id/adminpasswordLoginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Log in"
                    android:background="#993366"
                    android:layout_marginTop="15dp"
                    android:textColor="#fff" />




            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>